// binary_search
#include <stdio.h>

int binary_search(int a[], int n, int key) {
    int l = 0, r = n - 1;
    while (l <= r) {
        int m = l + (r - l) / 2;
        if (a[m] == key) return m;
        else if (a[m] < key) l = m + 1;
        else r = m - 1;
    }
    return -1;
}

int main(void) {
    int a[] = {7, 12, 14, 15, 18, 19, 20};  // ascending
    int n = sizeof(a)/sizeof(a[0]);
    int key = 18;

    int idx = binary_search(a, n, key);
    if (idx == -1) printf("Not found\n");
    else           printf("Found at index %d\n", idx);
    return 0;
}
