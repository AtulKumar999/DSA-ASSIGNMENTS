// selection_sort_and_search
#include <stdio.h>

void selection_sort(int a[], int n) {
    for (int i = 0; i < n - 1; ++i) {
        int min_i = i;
        for (int j = i + 1; j < n; ++j)
            if (a[j] < a[min_i]) min_i = j;
        if (min_i != i) { int t=a[i]; a[i]=a[min_i]; a[min_i]=t; }
    }
}

int binary_search(int a[], int n, int key) {
    int l=0, r=n-1;
    while (l<=r) {
        int m = l + (r - l)/2;
        if (a[m]==key) return m;
        else if (a[m] < key) l = m + 1;
        else r = m - 1;
    }
    return -1;
}

int main(void) {
    int a[] = {5,12,14,16,17,21,15,4,3,0};
    int n = sizeof(a)/sizeof(a[0]);
    int key = 15;

    selection_sort(a, n);

    printf("Sorted: ");
    for (int i=0;i<n;++i) printf("%d ", a[i]);
    printf("\n");

    int pos = binary_search(a, n, key);
    if (pos==-1) printf("Target %d not found\n", key);
    else         printf("Target %d found at index %d\n", key, pos);
    return 0;
}
